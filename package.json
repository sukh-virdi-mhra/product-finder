{
  "name": "product_finder",
  "version": "1.0.0",
  "description": "An app to find products",
  "main": "src/index.js",
  "scripts": {
    "copy-views": "copyfiles -f \"src/views/*.pug\" out/views",
    "copy-styles": "copyfiles -f \"src/styles/*.css\" public/styles",
    "build": "tsc",
    "dev": "npm run copy-styles && npm run copy-views && npm run watch & nodemon out/app-server.js",
    "start": "node out/index.js",
    "test": "jest",
    "watch": "tsc --watch"
  },
  "author": "apprentices",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^26.0.9",
    "jest": "^26.3.0",
    "mocha": "^8.0.1",
    "nodemon": "^2.0.4",
    "ts-jest": "^26.1.4",
    "typescript": "^3.9.7"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "pug": "^3.0.0"
  }
}
